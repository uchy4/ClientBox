<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.huff6.clientbox.TimerActivity">

    <Chronometer
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chronometer"
        android:textSize="80dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start"
        android:id="@+id/btn_toggle_start_stop"
        android:layout_alignParentTop="true"
        android:layout_marginTop="42dp"
        android:layout_alignLeft="@+id/btn_manual_entry"
        android:layout_alignStart="@+id/btn_manual_entry"
        android:layout_alignRight="@+id/btn_manual_entry"
        android:layout_alignEnd="@+id/btn_manual_entry"
        android:onClick="onClickStartStop" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset"
        android:id="@+id/btn_reset"
        android:layout_below="@+id/btn_toggle_start_stop"
        android:layout_alignLeft="@+id/btn_toggle_start_stop"
        android:layout_alignStart="@+id/btn_toggle_start_stop"
        android:layout_alignRight="@+id/btn_toggle_start_stop"
        android:layout_alignEnd="@+id/btn_toggle_start_stop"
        android:onClick="onClickReset" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go To Manual Enrty"
        android:id="@+id/btn_manual_entry"
        android:layout_marginTop="59dp"
        android:layout_below="@+id/chronometer"
        android:layout_centerHorizontal="true"
        android:onClick="fromTimerToManualEntry" />

</RelativeLayout>
